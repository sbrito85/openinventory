<%= simple_form_for(@device, html: {class: "form-horizontal"}) do |f| %>
  <% f.error_notification %>
    
    <%= f.input :image, label: "Upload an image" %>
    <%= f.input :make, as: :text, input_html: { rows: "1" } %>
    <%= f.input :model, as: :text, input_html: { rows: "1" } %>
    <%= f.input :assettype, as: :text, input_html: { rows: "1" } %>


  <div class="form-actions">
    <%= f.button :submit, :class => "btn btn-primary" %>
  </div>
<% end %>
