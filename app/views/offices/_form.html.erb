<%= simple_form_for(@office, html: {class: "form-horizontal"}) do |f| %>
  <% f.error_notification %>
    
  <%= f.input :office %>
  <%= f.input :sitecode %>
  <%= f.association :domain, :collection => Domain.order(:name), :label_method => :name  %>
  <%= f.input :ou, placeholder: "OU=Employees, OU=Office" %>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
