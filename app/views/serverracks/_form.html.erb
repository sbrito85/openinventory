<%= simple_form_for(@serverrack, html: {class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :totalunits %>

    <%= f.input :serverroom_id, :selected => get_serverroom(@serverrack.serverroom_id), :collection => Serverroom.order(:name), :label_method => :name %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
